@model BlockChain.Entidades.DispositivoNo

@{
    ViewData["Title"] = "Dispositivo";
}

<h1>@ViewData["Title"]</h1>

<h3>Detalhes</h3>

<div>
    <h4>Dispositivo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Endereço (Url)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EnderecoUrl)
        </dd>
        <dt>
            Está inacessível?
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Inacessivel)
        </dd>
        <dt>
            Motivo da inacessibilidade
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Erro)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edicao", "Dispositivo", new { id = Model.Id }, new { @class = "btn btn-default" })
    <a class="btn btn-default" asp-action="Listagem">Voltar para listagem</a>
</div>
